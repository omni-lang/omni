{
  "Function": {
    "prefix": "func",
    "body": [
      "func ${1:name}(${2:params})${3::${4:int}} {",
      "\t$0",
      "}"
    ],
    "description": "Function declaration"
  },
  "Main Function": {
    "prefix": "main",
    "body": [
      "func main():int {",
      "\t$0",
      "\treturn 0",
      "}"
    ],
    "description": "Main entry point"
  },
  "Struct": {
    "prefix": "struct",
    "body": [
      "struct ${1:Name} {",
      "\t${2:field}:${3:type}",
      "}"
    ]
  },
  "Import Std": {
    "prefix": "import std",
    "body": [
      "import std"
    ],
    "description": "Import full standard library"
  },
  "For Classic": {
    "prefix": "fori",
    "body": [
      "for ${1:i:int} = ${2:0}; ${1} < ${3:count}; ${1}++ {",
      "\t$0",
      "}"
    ],
    "description": "Classic for loop"
  },
  "For Range": {
    "prefix": "forin",
    "body": [
      "for ${1:item} in ${2:items} {",
      "\t$0",
      "}"
    ],
    "description": "Range loop"
  },
  "If Statement": {
    "prefix": "if",
    "body": [
      "if ${1:condition} {",
      "\t$0",
      "}"
    ],
    "description": "If statement"
  },
  "If Else Statement": {
    "prefix": "ifelse",
    "body": [
      "if ${1:condition} {",
      "\t$2",
      "} else {",
      "\t$0",
      "}"
    ],
    "description": "If/Else statement"
  },
  "Std Log": {
    "prefix": "log",
    "body": [
      "std.log.${1|debug,info,warn,error|}(\"${2:message}\")"
    ],
    "description": "Log via std.log"
  }
}

