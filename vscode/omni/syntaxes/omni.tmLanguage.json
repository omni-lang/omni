{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Omni",
  "scopeName": "source.omni",
  "fileTypes": [
    "omni"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#builtins"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.omni",
          "match": "//.*$"
        },
        {
          "name": "comment.block.omni",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.omni",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.omni",
              "match": "\\\\."
            },
            {
              "name": "meta.interpolation.omni",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [
                {
                  "include": "$self"
                }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.single.omni",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.omni",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.omni",
          "match": "\\b(0b[01_]+|0x[0-9a-fA-F_]+|[0-9][0-9_]*(\\.[0-9_]+)?([eE][+-]?[0-9_]+)?)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.omni",
          "match": "\\b(if|else|for|while|return|break|continue|switch|case|default|throw|try|catch|finally|match|when)\\b"
        },
        {
          "name": "keyword.declaration.omni",
          "match": "\\b(func|struct|enum|type|import|let|var|const|module|namespace)\\b"
        },
        {
          "name": "keyword.other.omni",
          "match": "\\b(test|assert|async|await|defer|null)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.omni",
          "match": "\\b(int|int32|int64|long|float|double|bool|string|char|byte|void|array|map)\\b"
        },
        {
          "name": "entity.name.type.omni",
          "match": "\\b([A-Z][A-Za-z0-9_]*)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.omni",
          "match": "(\\+|-|\\*|/|%|==|!=|<=|>=|<|>|&&|\\|\\||!|=|\\+=|-=|\\*=|/=|%=)"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.std.omni",
          "match": "\\bstd\\.(io|math|string|file|log|array|collections|os|time|network)\\b"
        },
        {
          "name": "support.function.builtin.omni",
          "match": "\\b(print|println|panic|len|assert|test\\.start|test\\.end)\\b"
        }
      ]
    }
  }
}

